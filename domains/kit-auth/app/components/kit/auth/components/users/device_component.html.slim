.card.mb-2
  .card-body.d-flex.align-items-center
    .h3.m-0.p-0
      .fab class=platform_icon
    .ms-3
      div
        span.fw-bold
          | #{ device }
        span.ms-2.text-muted.fst-italic
          | #{ app } #{ token[:id] }
      div
        span
          | #{ country_name }
        span.ms-3.fs-80p
          | #{ last_date }

    .ms-auto.btn.btn-sm.btn-ghost-border-danger
    = router_link_to(id: 'web|settings|sessions|destroy', params: { user_secret_id: token[:id] }, html: { class: 'btn btn-sm btn-ghost-border-danger ms-auto' })
      | Log out
