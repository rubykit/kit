doctype html
html
  head
    title
      | Kit::Auth - Dummy Container

    = csrf_meta_tags
    = csp_meta_tag

    = stylesheet_link_tag    'kit_auth_dummy_vendor',      media: 'all'
    = stylesheet_link_tag    'kit_auth_dummy_application', media: 'all'

    = javascript_include_tag 'kit_auth_dummy_vendor'
    = javascript_include_tag 'kit_auth_dummy_application'

  body class="env-#{ Rails.env } #{ Rails.env.development? ? 'debug' : '' }"
    = render Kit::Auth::DummyApp::Components::NavbarComponent.new(current_user: current_user, request: request)

    main.container.container-max-xl.pt-10
      = render Kit::UiComponents::Components::FlashComponent.new(router_request: router_request, flash: flash.to_h)
      = yield
