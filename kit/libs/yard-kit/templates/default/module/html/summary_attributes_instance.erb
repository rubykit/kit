<%
  list = Yard::Kit::Services::Modules.get_object_attributes({
    object:          object,
    options:         options,
    verifier_runner: ->(el) { run_verifier(el) },
  })
%>
<% if list.size > 0 %>

  <div class="summary summary-attributes-instance">
    <h2 class='summary-heading'>
      <a href="#attributes-instance" class='title'>Instance attributes</a>
      <span class='list-count'><%= list.size %></span>
    </h2>

    <% list.each do |item| %>
      <%= yieldall item: item %>
    <% end %>
  </div>

<% end %>