<%
  # HtmlHelper.signature as a template.
  # @ref https://github.com/lsegal/yard/blob/master/lib/yard/templates/helpers/html_helper.rb#L526

  method = @item

  if method.tags(:overload).size == 1
    method = method.tag(:overload)
  end

  full_attr_name = !method.attr_info

  scope       = (method.scope == :class) ? '.' : '#'
  name        = full_attr_name ? method.name : method.name.to_s.gsub(/^(\w+)=$/, '\1')
  arguments   = (!full_attr_name && method.writer?) ? '' : format_args(method)
  block       = format_block(method)
%>

<span class='scope'><%= scope %></span><span class='name'><%= name %></span><span class='arguments'><%= arguments %></span><span class='block'><%= block %></span>
