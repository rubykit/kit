<% list = Yard::Kit::Services::Modules.get_methods(object: object, options: options, include_class_methods: false) %>
<% if list.size > 0 %>

  <hr>

  <section id="methods-instance" class="details-list">

    <h1 class="section-heading">
      <a class="hover-link" href="#methods-instance">
        <span class="icon-link" aria-hidden="true"></span>
        <span class="sr-only">Link to this section</span>
      </a>
      Instance methods
    </h1>

    <div class="functions-list">
      <% list.each_with_index do |meth, i| %>
        <%= yieldall :object => meth, :owner => object, :index => i %>
      <% end %>
    </div>

  </section>

<% end %>